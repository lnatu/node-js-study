extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? Submit your patch request with your new password to: #{url}.
  p (Website for this action is not yet implemented)
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p Ignore if you didn't forget your password